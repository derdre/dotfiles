          inactive_workspace #282A36  #282A36  #BFBFBF
          urgent_workspace   #FF40F3  #A02899  #F8F8F2
          binding_mode       #AD35FF  #651F95  #F8F8F2
        }

        #status_command ~/.config/i3status/custom.sh
        #status_command i3status -c ~/.config/i3status/config
	status_command ~/.config/i3status/net-speed.sh
	#status_command i3blocks ~/.config/i3blocks/config
}


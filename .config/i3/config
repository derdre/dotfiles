    position top
    tray_output primary
    tray_padding 4
    font pango:DejaVu Sans, FontAwesome 12
    separator_symbol "::"
    strip_workspace_numbers yes

        colors {
          background #282A36
          statusline #F8F8F2
          separator  #6272A4

          #name              #border  #bground #text
          focused_workspace  #6272A4  #44475A  #F8F8F2
